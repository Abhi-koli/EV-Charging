<mvc:View
    controllerName="evcharger.controller.Map"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
>
    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <tnt:ToolHeader>
                <Title text="EV charging station finder or locater" />
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation>
                <tnt:NavigationList>
                    <tnt:NavigationListItem
                        text="USA"
                        select="onSelectUSA"
                    />
                    <tnt:NavigationListItem
                        text="EU"
                        select="onSelectEU"
                    />
                    <tnt:NavigationListItem
                        text="India"
                        select="onSelectIndia"
                    />
                </tnt:NavigationList>
                <tnt:fixedItem />
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
            <NavContainer
                id="pageContainer"
                initialPage="pageUSA"
            >
                <pages>
                    <ScrollContainer
                        id="pageUSA"
                        horizontal="false"
                        vertical="true"
                        height="100%"
                    >
                        <html:iframe
                            height="1000px"
                            width="100%"
                            src='https://www.chargedfuture.com/public-ev-charging-stations-map/'
                        />
                    </ScrollContainer>
                    <ScrollContainer
                        id="pageEU"
                        horizontal="false"
                        vertical="true"
                        height="100%"
                    >
                        <html:iframe
                            height="1000px"
                            width="100%"
                            src='https://chargefinder.com/en/share?lat=46.3&amp;lng=5.3&amp;zoom=4'
                        />
                    </ScrollContainer>
                    <ScrollContainer
                        id="pageIndia"
                        horizontal="false"
                        vertical="true"
                        height="100%"
                    >
                        <html:iframe
                            height="1000px"
                            width="100%"
                            src='https://www.chargelist.com/'
                        />
                    </ScrollContainer>
                </pages>
            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
